<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 앱의 내부 저장소에 있는 파일에 접근 허용 -->
    <files-path name="my_files" path="."/>
    <!-- 앱의 캐시 디렉토리에 있는 파일에 접근 허용 -->
    <cache-path name="my_cache" path="."/>
    <!-- 외부 저장소의 특정 경로에 있는 파일에 접근 허용 (예: Pictures 폴더) -->
    <external-path name="external_files" path="."/>
    <!-- 외부 저장소의 캐시 디렉토리에 있는 파일에 접근 허용 -->
    <external-cache-path name="external_cache_files" path="."/>
    <!-- 외부 미디어 저장소에 있는 파일에 접근 허용 (예: DCIM, Pictures 등) -->
    <external-media-path name="external_media_files" path="."/>
<!--    <cache-path name="images" path="."/>-->
</paths>